

pipeline {
    agent {
        docker {
            image 'node:lts-bullseye-slim' 
            args '-p 3000:3000' 
            label "docker"
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh 'chown -R root ~/.npm'
                sh 'npm install' 
            }
        }
    }
}

